<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darker_gray"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/vehicle_image_layout"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/vehicle_details_image_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>

            <ImageView
                android:id="@+id/heart_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart_outlined"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"/>

        </RelativeLayout>

    <TextView
        android:id="@+id/car_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMW 320d"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/vehicle_image_layout"
        android:layout_marginTop="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_name_text_view">

        <TextView
            android:id="@+id/rating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/star"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="60e"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="end"/>

    </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>